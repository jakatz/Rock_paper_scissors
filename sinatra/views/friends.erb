</div>

<div class="row">
  <div class="small-6 small-centered panel column">
    <table>
      <thead>
        <tr>
          <th width="600">Players</th>
          <th width="200">Wins</th>
          <th width="200">Games Played</th>
          <th width="200">Challenge</th>
        </tr>
      </thead>
      <tbody>
      <% players = RPS.orm.list_players %>
      <%  players.each do |player| %>
        <% if player.username != session[:username] %>
        <tr>
          <td><%= player.username %></td>
          <td><%= player.win_count%></td>
          <td><%= player.games_played%></td>
          <td><a class=" button tiny"  href='/user/game/first_move?player2=<%= player.username %>'>Challenge Player</a></td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

