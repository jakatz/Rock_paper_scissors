<div class="row">
  <div class="small-centered small-6 large-6 columns">
    <div class="row">
      <div class='show-for-medium-only text-center'><h3>Your Games</h3></div>
      <div class='show-for-large-up text-center'><h1>Your Games</h1></div>
    </div>
  </div>
</div>

<!-- Top bar ^ -->

<div class = 'row'>
  <div class="small-6 small-centered panel column">
    <h5 class ='text-center'>Your Active games</h5>
    <table>
      <thead>
        <tr>
          <th class='text-center' width="150">Player 1</th>
          <th class='text-center' width="150">Player 2</th>
        </tr>
      </thead>
      <tbody>
        <% @active_games.each do |game| %>
        <% player1 = RPS.orm.select_player_by_id( game.player1 )%>
        <% player2 = RPS.orm.select_player_by_id( game.player2 )%>

        <tr>
          <td class='text-center' ><%= player1.username %></td>
          <td class='text-center'><%= player2.username %></td>
          <%if player2.username == session[:username]%>
          <td><a href= '/user/game/second_move?game_id=<%=game.id%>&player2=<%=player2.id%>' class = ' button tiny'>review game</a></td>
          <%else%>
          <td><a href= '/user/game/review?game_id=<%=game.id%>&player2=<%=player2.id%>' class = ' button tiny'>review game</a></td>
          <%end%>


        </tr>
       <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class = 'row'>
  <div class="small-6 small-centered panel column ">
    <h5 class ='text-center'>last 10 Finished games</h5>
    <table>
      <thead>
        <tr>
          <th class='text-center' width="150">Player 1</th>
          <th class='text-center' width="150">Player 2</th>
        </tr>
      </thead>
      <tbody>
        <% @inactive_games.each do |game| %>
        <% player1 = RPS.orm.select_player_by_id( game.player1 )%>
        <% player2 = RPS.orm.select_player_by_id( game.player2 )%>

        <tr>
          <td class='text-center' ><%= player1.username %></td>
          <td class='text-center'><%= player2.username %></td>
          <td><a href = '/user/game/review' class = 'tiny'>review game</a></td>
        </tr>
       <% end %>
      </tbody>
    </table>
  </div>
</div>
